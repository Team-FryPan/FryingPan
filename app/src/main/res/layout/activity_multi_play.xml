<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.cloudapp.eggfry.frypan.MultiPlayActivity">

    <ImageView
        android:id="@+id/bg_multi_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:layout_width="79dp"
                android:layout_height="104dp"
                android:id="@+id/random_btn"
                android:onClick="onRandomBtnClicked"
                android:background="@drawable/egg_random"
                android:layout_marginRight="25dp"/>
            <ImageButton
                android:layout_width="79dp"
                android:layout_height="104dp"
                android:id="@+id/select_btn"
                android:onClick="onSelectBtnClicked"
                android:background="@drawable/egg_select"
                />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5"/>
    </LinearLayout>

</FrameLayout>
